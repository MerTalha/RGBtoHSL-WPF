<Window x:Class="ColorChange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChange"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="RGB renk kodunu girin (örn: 125,125,125):" Margin="0 0 0 10"/>
            <TextBox x:Name="txtInput" Margin="0 0 0 10"/>
            <Button Content="Değiştir" Click="Button_Click"/>
            <TextBlock x:Name="txtOutput" Margin="0 20 0 0"/>
            <Border x:Name="inputColorBorder" Width="50" Height="50" BorderBrush="Black" BorderThickness="1" Margin="0 20 0 0"/>
            <Border x:Name="outputColorBorder" Width="50" Height="50" BorderBrush="Black" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
